{
    "app-id": "page.codeberg.SOrg.DogGTK.Devel",
    "runtime": "org.gnome.Platform",
    "runtime-version": "master",
    "sdk": "org.gnome.Sdk",
    "command": "dog",
    "desktop-file-name-suffix": " (Nightly)",
    "tags": ["nightly"],
    "finish-args": [
        "--socket=wayland",
        "--socket=fallback-x11",
        "--device=dri",
        "--share=ipc"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
	{
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "cleanup": ["*"],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                    "tag": "v0.10.0"
                }
            ]
	},
        {
            "name": "dog",
            "builddir": true,
            "buildsystem": "meson",
            "config-opts": ["-Dprofile=development"],
            "sources": [
                {
                    "type": "git",
                    "url": "https://codeberg.org/SOrg/Doggo.git",
                    "branch": "main"
                }
            ]
        }
    ]
}

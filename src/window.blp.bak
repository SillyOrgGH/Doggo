using Gtk 4.0;
using Adw 1;

template $DogWindow : Adw.ApplicationWindow {
  default-width: 600;
  default-height: 600;
  content:
  Adw.ToolbarView {
    [top]
    Adw.HeaderBar header_bar {
      [end]
      MenuButton {
        primary: true;
        icon-name: "open-menu-symbolic";
        tooltip-text: _("Menu");
        menu-model: primary_menu;
      }
    }

    content:

    Adw.StatusPage {
      icon-name: "dog";
      title: "A Wild Doggo Appeared";
      Adw.Clamp {
        maximum-size: 250;
        child: Box {
          orientation: vertical;
          Label wooflabel {
            label: "Woofs: 123";
            styles ["title-3"]
          }

          Button petbutton {
          action-name: "win.pet";
            child: Adw.ButtonContent {
              label: "Pet the Doggo";
              icon-name: "dog-symbolic";
              halign: center;
            };
            styles ["pill", "petbutton", "opaque"]
          }
          Button abandonbutton {
          action-name: "win.abandon";
            child: Adw.ButtonContent {
              label: "Abandon the Doggo";
              icon-name: "ghost";
              halign: center;
            };
            styles ["pill", "abandonbutton", "opaque"]
          }
        };
      }
    };
  }

  ;
}

menu primary_menu {
  section {
    item {
      label: _("_Keyboard Shortcuts");
      action: "win.show-help-overlay";
    }

    item {
      label: _("_About Doggo");
      action: "app.about";
    }
  }
}
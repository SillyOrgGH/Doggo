<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="DogWindow" parent="AdwApplicationWindow">
    <property name="default-width">600</property>
    <property name="default-height">600</property>
    <property name="content">
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar" id="header_bar">
            <child type="end">
              <object class="GtkMenuButton">
                <property name="primary">True</property>
                <property name="icon-name">open-menu-symbolic</property>
                <property name="tooltip-text" translatable="yes">Menu</property>
                <property name="menu-model">primary_menu</property>
              </object>
            </child>
          </object>
        </child>
        <property name="content">
          <object class="AdwLeaflet" id="leaflet">
            <property name="can-unfold">false</property>
            <property name="homogeneous">true</property>
            <property name="can-navigate-back">true</property>
            <property name="visible-child-name">home_page</property>
            <child>
              <object class="AdwStatusPage" id="home_page">
                <property name="icon-name">page.codeberg.SOrg.DogGTK</property>
                <property name="title">Diggity Dawg spotted</property>
                <property name="description">Look after this dog, I can't be bothered</property>
                <property name="vexpand">true</property>
                <child>
                  <object class="AdwClamp">
                    <property name="maximum-size">250</property>
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <child>
                          <object class="GtkButton" id="petbutton">
                            <property name="action-name">app.pet</property>
                            <child>
                              <object class="AdwButtonContent">
                                <property name="label">Pet the dog</property>
                                <property name="icon-name">page.codeberg.SOrg.DogGTK-symbolic</property>
                                <property name="halign">center</property>
                              </object>
                            </child>
                            <style>
                              <class name="pill"/>
                              <class name="PetButton"/>
                              <class name="opaque"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton" id="abandonbutton">
                            <property name="action-name">app.abandon</property>
                            <child>
                              <object class="AdwButtonContent">
                                <property name="label">Abandon!</property>
                                <property name="icon-name">ghost</property>
                                <property name="halign">center</property>
                              </object>
                            </child>
                            <style>
                              <class name="pill"/>
                              <class name="AbandonButton"/>
                              <class name="opaque"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </property>
      </object>
    </property>

  </template>
  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">_Keyboard Shortcuts</attribute>
        <attribute name="action">win.show-help-overlay</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_About Dog (GTK)</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>
</interface>
